<% provide(:title, "Top") %>

<div class="row">
  <div class="col-md-7">
    <div class="jumbotron center" id="top-main">
      <h1 id="top-main-title">TaskApp</h1>
      <p>TaskAppは簡易ToDo管理ツールです。</p>
      <p>↓↓初めてのご利用↓↓</p>
      
      <%= link_to "アカウント作成", signup_path, class: "btn btn-lg btn-success" %>
      <div>
        <%= link_to "ゲストログイン（管理権限）", login_path, class: "btn btn-danger" %>
        <%= link_to "ゲストログイン（一般権限）", login_path, class: "btn btn-warning" %>
      </div>
    </div>
  </div>
  <div class="col-md-4">
    <h1>ログイン</h1>
    <%= form_with(scope: :session, url: login_path, local: true) do |f| %>
          
      <%= f.label :email, class: "label-login" %>
      <%= f.email_field :email, class: 'form-control' %>
            
      <%= f.label :password, class: "label-login" %>
      <%= f.email_field :password, class: 'form-control' %>
          
      <%= f.label :remember_me, class: "checkbox inline checkbox-login", for: "remember_me" do %>
        <%= f.check_box :remember_me, id: "remember_me" %>
        <span>ログイン情報を記憶する</span>
      <% end %> 
            
      <%= f.submit "Log In", class: "btn btn-primary btn-block btn-login" %>
    <% end %>
  </div>
</div>

