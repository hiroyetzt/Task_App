<% provide(:title, "#{@user.name}") %>
<h1>タスク編集</h1>
<div class="row">
  <div class="col-sm-8 col-sm-offset-2">
    <%= form_with(model: @task, url: user_task_path(@user), method: :patch, local: true) do |f| %>
      <%= render 'shared/error_messages', model: f.object %>
      
      <%= f.label :task_name, class: "label-edit" %>
      <%= f.text_field :task_name, class: "form-control" %>
      
      <%= f.label :task_detail, class: "label-edit" %>
      <%= f.text_area :task_detail, class: "form-control", rows: 5 %>
      
      <%= f.submit "更新", class: "btn btn-sm btn-primary btn-edit" %>
      <%= link_to "キャンセル", user_tasks_path, class: "btn btn-sm btn-default btn-edit" %>
      
    <% end %>
  </div>
</div>